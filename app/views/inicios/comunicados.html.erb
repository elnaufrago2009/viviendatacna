<div class="container">
	<!-- SubMenu -->
	<ul class="breadcrumb">
	  <li><a href="/">Inicio</a> <span class="divider">/</span></li>  
	  <li class="active">Comunicados</li>
	</ul>
	<!-- End SubMenu-->

	<div class="row">
		<div class="span3">
			<%= render "shared/slide_menu" %>
		</div>
		<div class="span9">
			<div class="page-header">
				<h1>Ultimos Comunicados</h1>
			</div>
			<div class="row">
			  <div class="span4">
			    <%= will_paginate @comunicados, :renderer => BootstrapPagination::Rails %>
			  </div>
			  <div class="span5">
			    <%= form_for(comunicados_path, :html=>{:class=>"form-search pull-right"}, :method => "get") do |f| %>
			        <div class="input-append">
			          <%= text_field_tag :search, params[:search], :class =>"span2 search-query", :placeholder=>"Buscar" %>
			          <button type="submit" class="btn"><i class="icon-search"></i> Buscar</button>
			        </div>
			    <% end %>
			  </div>
			</div>

			<table class="table table-striped table-bordered">
				<tr>
					<th>#id</th>
					<th>Titulo</th>
					<th>Fecha</th>
					<th>Acciones</th>
				</tr>
				<% @comunicados.each do |comunicado| %>
					<tr>
						<td><%= comunicado.id %></td>
						<td>
							<a href="/inicios/comunicado/<%= comunicado.id %>"><i class="icon-file"></i> <%= comunicado.titulo %></a>
						</td>
						<td><%= comunicado.fecha %></td>
						<td><a href="<%= comunicado.carchivo %>" class="btn"><i class="icon-download-alt"></i> Descargar</a></td>
					</tr>
				<% end %>
			</table>

			<div class="pull-right">
				<%= will_paginate @comunicados, :renderer => BootstrapPagination::Rails %>
			</div>

		</div>
	</div>
</div>