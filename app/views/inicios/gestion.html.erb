        </tr>
        <% @normativos.each do |normativo| %>
            <tr>
              <td><%= normativo.id %></td>
              <td><%= normativo.nombre %></td>
              <td><%= normativo.anho %></td>
              <td>
                <%= link_to raw("<i class='icon-eye-open'></i> Ver Documento"), "/inicios/gestion_detalle/#{normativo.id}", :class => "btn" %>
